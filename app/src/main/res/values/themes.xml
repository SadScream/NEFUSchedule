<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_orchid</item>
        <item name="colorSecondaryVariant">@color/dark_magenta</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SettingsTheme" parent="Theme.AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black_btn</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:src">@android:drawable/btn_default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:colorControlHighlight">#673ab7</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="android:insetTop">2dp</item>
<!--        <item name="android:layout_marginRight">2dp</item>-->
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginBottom">683dp</item>
    </style>

    <style name="BlackTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textBlack</item>
<!--        <item name="android:textSize">12sp</item>-->
    </style>
</resources>